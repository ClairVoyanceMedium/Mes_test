    <!-- Anti-clickjacking -->
    <script nonce="xai-ultimateNonce">
        if (window.top !== window.self) {
            try { window.top.location.replace(window.self.location.href); }
            catch (e) { console.warn("Clickjacking attempt blocked.", e); }
        }
    </script>

