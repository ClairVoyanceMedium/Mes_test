        .popup { display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: var(--accent-dark); padding: 1.5rem; border: 3px solid var(--fluo-pink); border-radius: 10px; box-shadow: 0 0 25px var(--fluo-pink-shadow); z-index: 1000; width: clamp(280px, 90vw, 450px); text-align: center; font-family: var(--font-primary); animation: popupFadeIn 0.5s ease-in-out; }
        .popup.active { display: block; }
        
        .sticky-banner { position: fixed; bottom: 0; left: 0; width: 100%; background: var(--border-color); color: var(--accent-dark); padding: 0.5rem; text-align: center; z-index: 900; font-size: 0.9rem; opacity: 0.9; transition: opacity 0.3s ease; }
        .sticky-banner:hover { opacity: 1; }
        
        @keyframes pulseGlow { 0%, 100% { text-shadow: 2px 2px 5px rgba(255, 255, 255, 0.7); } 50% { text-shadow: 2px 2px 10px rgba(255, 255, 255, 0.9); } }
        @keyframes pulseProgressif {
            0% { transform: scale(1); box-shadow: 0 0 0 0 rgba(255, 20, 147, 0.7); }
            70% { transform: scale(1.05); box-shadow: 0 0 20px 10px rgba(255, 20, 147, 0); }
            100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(255, 20, 147, 0); }
        }
        @keyframes popupFadeIn {
            from { opacity: 0; transform: translate(-50%, -60%); }
            to { opacity: 1; transform: translate(-50%, -50%); }
        }
        
