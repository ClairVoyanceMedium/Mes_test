    <!-- Scripts optimisés -->
    <script nonce="xai-ultimateNonce">
        // Gestion de l'année dynamique
        document.addEventListener("DOMContentLoaded", () => {
            const currentYear = new Date().getFullYear();
            document.getElementById("current-year").textContent = currentYear;
            document.getElementById("footer-year").textContent = currentYear;
        });

        // Gestion du carrousel
        function initCarousel(carouselId, innerId) {
            const carousel = document.getElementById(carouselId);
            const inner = document.getElementById(innerId);
            const items = inner.querySelectorAll(".carousel-item");
            const prevBtn = carousel.querySelector(".prevBtn");
            const nextBtn = carousel.querySelector(".nextBtn");
            let currentIndex = 0;

            function updateCarousel() {
                items.forEach((item, index) => {
                    item.classList.toggle("active", index === currentIndex);
                    item.setAttribute("tabindex", index === currentIndex ? "0" : "-1");
                    item.setAttribute("aria-hidden", index !== currentIndex);
                });
                carousel.setAttribute("aria-label", `Carrousel, slide ${currentIndex + 1} sur ${items.length}`);
            }

            prevBtn.addEventListener("click", () => {
                currentIndex = (currentIndex - 1 + items.length) % items.length;
                updateCarousel();
            });

            nextBtn.addEventListener("click", () => {
                currentIndex = (currentIndex + 1) % items.length;
                updateCarousel();
            });

            carousel.addEventListener("keydown", (e) => {
                if (e.key === "ArrowLeft") prevBtn.click();
                if (e.key === "ArrowRight") nextBtn.click();
            });

            updateCarousel();
        }

        // Initialisation des carrousels
        document.addEventListener("DOMContentLoaded", () => {
            initCarousel("avisCarousel", "avisCarouselInner");
            initCarousel("blogCarousel", "blogCarouselInner");
        });

        // Gestion du pop-up
        document.addEventListener("DOMContentLoaded", () => {
            const popup = document.getElementById("welcomePopup");
            const closeBtn = popup.querySelector(".popup-close-button");

            setTimeout(() => {
                popup.classList.add("active");
                popup.focus();
            }, 2000);

            closeBtn.addEventListener("click", () => {
                popup.classList.remove("active");
            });

            popup.addEventListener("keydown", (e) => {
                if (e.key === "Escape") closeBtn.click();
            });
        });

        // Gestion du calculateur IMC
        document.addEventListener("DOMContentLoaded", () => {
            const form = document.getElementById("imcForm");
            const resultDiv = document.getElementById("imc-result");
            const errorDiv = document.getElementById("imc-error");
            const chartCanvas = document.getElementById("imcChart");
            const recommendationDiv = document.getElementById("imc-recommendation");
            let chartInstance = null;

            form.addEventListener("submit", (e) => {
                e.preventDefault();
                const weight = parseFloat(document.getElementById("weight").value);
                const height = parseFloat(document.getElementById("height").value) / 100;

                errorDiv.textContent = "";
                resultDiv.textContent = "";
                recommendationDiv.style.display = "none";

                if (isNaN(weight) || isNaN(height) || weight <= 10 || weight >= 300 || height <= 0.5 || height >= 2.8) {
                    errorDiv.textContent = "Veuillez entrer un poids (10-300 kg) et une taille (50-280 cm) valides.";
                    return;
                }

                const imc = (weight / (height * height)).toFixed(1);
                let category = "";
                if (imc < 18.5) category = "Insuffisance pondérale";
                else if (imc < 25) category = "Poids normal";
                else if (imc < 30) category = "Surpoids";
                else category = "Obésité";

                resultDiv.innerHTML = `Votre IMC est de <strong>${imc}</strong> (${category}).`;
                recommendationDiv.style.display = "block";
                recommendationDiv.setAttribute("aria-hidden", "false");

                if (chartInstance) chartInstance.destroy();
                chartInstance = new Chart(chartCanvas, {
                    type: "bar",
                    data: {
                        labels: ["Votre IMC", "Insuffisance pondérale", "Poids normal", "Surpoids", "Obésité"],
                        datasets: [{
                            label: "IMC",
                            data: [imc, 18.5, 25, 30, 40],
                            backgroundColor: ["#87CEEB", "#FFB6C1", "#2ecc71", "#ff6b6b", "#FF1493"],
                            borderColor: ["#BBAE98"],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: {
                            y: { beginAtZero: true, max: 50, title: { display: true, text: "Indice de Masse Corporelle" } },
                            x: { title: { display: true, text: "Catégories" } }
                        }
                    }
                });
            });
        });

        // Lazy loading des images
        document.addEventListener("DOMContentLoaded", () => {
            const images = document.querySelectorAll("img[loading='lazy']");
            if ("IntersectionObserver" in window) {
                const observer = new IntersectionObserver((entries, observer) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            const img = entry.target;
                            img.src = img.dataset.src || img.src;
                            observer.unobserve(img);
                        }
                    });
                });
                images.forEach(img => observer.observe(img));
            } else {
                images.forEach(img => img.src = img.dataset.src || img.src);
            }
        });
    </script>
</body>
</html>
