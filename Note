    <!-- Google Translate -->
    <script defer src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    <script nonce="xai-ultimateNonce">
        function googleTranslateElementInit() {
            try {
                new google.translate.TranslateElement({
                    pageLanguage: 'fr',
                    autoDisplay: true,
                    includedLanguages: 'en,es,pt,zh-CN,hi,ar,ru,ja,ko,de,it,fr,he,sw,vi,th,id',
                    layout: google.translate.TranslateElement.InlineLayout.SIMPLE
                }, 'google_translate_element');
                document.documentElement.lang = navigator.language.split('-')[0] || 'fr';
            } catch (e) {
                console.error("Google Translate initialization failed:", e);
            }
        }
    </script>

    <!-- Google Analytics -->
    <script defer src="https://www.googletagmanager.com/gtag/js?id=G-2RSFE6WL4M"></script>
    <script nonce="xai-ultimateNonce">
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        document.addEventListener("DOMContentLoaded", function() {
            try {
                gtag('js', new Date());
                gtag('config', 'G-2RSFE6WL4M', {
                    page_path: window.location.pathname,
                    anonymize_ip: true,
                    cookie_flags: 'SameSite=None;Secure'
                });
                gtag('event', 'page_view', {
                    'send_to': 'G-2RSFE6WL4M',
                    'page_location': window.location.href
                });
            } catch(e) {
                console.error("Google Analytics failed:", e);
            }
        });
    </script>

    <!-- Chart.js pour le graphique IMC -->
    <script defer src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

    <!-- Conversion de devise -->
    <script defer src="https://cdn.jsdelivr.net/npm/@fawazahmed0/currency-api@latest/v1/currencies/eur.min.js"></script>
    <script nonce="xai-ultimateNonce">
        async function convertCurrency() {
            try {
                const userCountry = await (await fetch('https://ipapi.co/json/')).json();
                const userCurrency = userCountry.currency || 'EUR';
                const priceElements = document.querySelectorAll('.price');
                const response = await fetch('https://api.exchangerate-api.com/v4/latest/EUR');
                const rates = (await response.json()).rates;

                priceElements.forEach(el => {
                    const eurPrice = parseFloat(el.getAttribute('data-eur-price'));
                    const convertedPrice = (eurPrice * (rates[userCurrency] || 1)).toFixed(2);
                    el.textContent = `${convertedPrice} ${userCurrency}`;
                });
            } catch (e) {
                console.error("Currency conversion failed:", e);
            }
        }
        document.addEventListener("DOMContentLoaded", convertCurrency);
    </script>

